<h1>All Items</h1>

<a href="/form">Add Item</a>

<table>
	<tr>
		<td>ID</td>
		<td>Name</td>
		<td>Quantity</td>
		<td>Amount</td>
	</tr>
	<% items.forEach(function(item) { %>
	<tr>
		<td><%= item.id %></td>
		<td><%= item.name %></td>
		<td><%= item.qty %></td>
		<td><%= item.amount %></td>
		<td>
			<a
				href="/delete?id=<%= item.id %>"
				onClick="return confirm('Are you sure to delete this item?')"
				>Delete</a
			>
			<a href="/update?id=<%= item.id %>">Edit</a>
		</td>
	</tr>
	<% }); %>
</table>
